
<div id="page-content">
  <h1 class="text-center mt-4">Listing All Articles</h1>

  <% @articles.each do |article| %>
    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow-lg mb-5 bg-white rounded">
            <div class="card-header font-italic">
              by USER NAME
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
              <p class="card-text"><%= truncate(article.description, length: 100) %></p>
              <button type="button" class="btn btn-outline-success"><%= link_to 'View', article_path(article), class: "text-success" %></button>
              <button type="button" class="btn btn-outline-info"><%= link_to 'Edit', edit_article_path(article), class: "text-info" %></button>
              <button type="button" class="btn btn-outline-danger"><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "text-danger" %></button>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(article.created_at) %> ago,
                last edited <%= time_ago_in_words(article.updated_at) %> ago.</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
